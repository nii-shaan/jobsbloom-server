{
  "compilerOptions": {
    "target": "ES2022", // Target the latest ECMAScript features
    "module": "ES2022",
    "allowJs": true, // Allow JavaScript files
    "outDir": "./build", // Output compiled files to dist folder
    "rootDir": "./src", // Keep source files in src folder
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
    "forceConsistentCasingInFileNames": true, // Disallow inconsistent casing in imports
    "skipLibCheck": true, // Skip type-checking of declaration files for performance
    "resolveJsonModule": true, // Allow importing .json files
    "noImplicitAny": true, // Raise errors on expressions and declarations with an implied `any` type
    "noUnusedLocals": true, // Report errors on unused local variables
    "noUnusedParameters": true, // Report errors on unused parameters
    "moduleResolution": "node", // Use Node's resolution for modules
    "strictNullChecks": true, // Enable strict null checks
    "noFallthroughCasesInSwitch": true // Ensure switch statements have case fallthroughs handled
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "src/**/*"
  ]
}
